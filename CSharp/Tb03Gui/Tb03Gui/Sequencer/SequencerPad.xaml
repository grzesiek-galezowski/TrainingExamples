<UserControl x:Class="Tb03Gui.Sequencer.SequencerPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tb03Gui.Sequencer"
             mc:Ignorable="d" 
             d:DesignHeight="132.876" d:DesignWidth="98.054">
    <Grid>
        <Label Name="PadLabel" Content="" HorizontalAlignment="Left" Height="96" VerticalAlignment="Top" Width="96"
             Background="LightGray" BorderBrush="Black" BorderThickness="5" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="AccentButton"  Content="Acc" Background="LightGray" HorizontalAlignment="Left" Margin="0,96,0,0" VerticalAlignment="Top" Height="32" Width="32" Click="AccentButton_Click"/>
        <Button x:Name="SlideButton" Content="Sli" Background="LightGray" HorizontalAlignment="Left" Margin="32,96,0,0" VerticalAlignment="Top" Height="32" Width="32"/>
        <Button x:Name="StateButton" Content="1" Background="LightGray" HorizontalAlignment="Left" Margin="64,96,0,0" VerticalAlignment="Top" Height="32" Width="32"/>
    </Grid>
</UserControl>
